    private void bussyActionPerformed(java.awt.event.ActionEvent evt) {                                      
        try{
            String panties = cheeky.getText();
            String thongs = thighs.getText();
            Connection bikini = DriverManager.getConnection("jdbc:mysql://localhost:3306/javasa522?zeroDateTimeBehavior=CONVERT_TO_NULL", "root", "Jason1601");
            String briefs = "SELECT * FROM teachers WHERE Name = '" + panties + "'";
            Statement cat_girls = bikini.createStatement();
            ResultSet dog_girls= cat_girls.executeQuery(briefs);
            if(dog_girls.next()){
                if(!"steponmecreeper".equals(thongs)){
                    JOptionPane.showMessageDialog(null, "You shall not pass!!");
                }else{
                    JOptionPane.showMessageDialog(null, "Welcome " + panties);
                    thighs.setText("");
                    cheeky.setText("");
                    Hentie isekai = new Hentie();
                    isekai.setVisible(true);
                    this.setVisible(false);
                }                    
            }else{
                JOptionPane.showMessageDialog(null, "You shall not pass!!");
                thighs.setText("");
                cheeky.setText("");
            }
            
        }catch(HeadlessException | SQLException waifu){
            JOptionPane.showMessageDialog(null, "(⓿_⓿)");
        }
    }                                     

